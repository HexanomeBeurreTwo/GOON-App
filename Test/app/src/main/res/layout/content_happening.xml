<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.h4115.test.HappeningActivity"
    tools:showIn="@layout/activity_happening">

    <TextView
        android:id="@+id/happening_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:text="NOM DE L'ACTIVITE"
        android:layout_above="@+id/happening_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/happening_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ça me tente bien !"
        android:textAllCaps="false"
        android:layout_above="@+id/happening_distance"
        android:layout_marginTop="@dimen/short_margin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/happening_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/short_margin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="distance de l'activité"/>

    <TextView
        android:id="@+id/happening_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description de l'activité"
        android:gravity="center"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_below="@+id/happening_distance"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/happening_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags de l'activité"
        android:gravity="center"
        android:layout_marginTop="@dimen/short_margin"
        android:layout_below="@+id/happening_description"
        android:layout_centerHorizontal="true" />

</RelativeLayout>